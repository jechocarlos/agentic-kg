# Automated Knowledge Graph (AKG) - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here
GOOGLE_PROJECT_ID=your_google_cloud_project_id

# LlamaParse Configuration
LLAMA_CLOUD_API_KEY=your_llamaparse_api_key_here

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# Supabase Database Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_API_KEY=your_supabase_api_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Local File Ingestion Configuration
DOCUMENTS_INPUT_DIR=/path/to/your/documents
SUPPORTED_FILE_TYPES=pdf,docx,txt,md,html,pptx,xlsx
WATCH_DIRECTORY=true
RECURSIVE_SCAN=true
EXCLUDE_PATTERNS=.git/*,node_modules/*,__pycache__/*

# Application Configuration
LOG_LEVEL=INFO
MAX_CONCURRENT_DOCUMENTS=5
CHUNK_SIZE=1000
OVERLAP_SIZE=200

# Graph Configuration
MAX_GRAPH_DEPTH=5
SIMILARITY_THRESHOLD=0.8
PROVENANCE_ENABLED=true

# Entity Deduplication Configuration
ENABLE_ENTITY_DEDUPLICATION=true
ENTITY_SIMILARITY_THRESHOLD=0.8
CROSS_TYPE_SIMILARITY_THRESHOLD=0.95
ENABLE_RELATIONSHIP_DEDUPLICATION=true

# Coreference Resolution Configuration
ENABLE_COREFERENCE_RESOLUTION=true

# For conservative deduplication (fewer merges, higher precision):
# ENTITY_SIMILARITY_THRESHOLD=0.9
# CROSS_TYPE_SIMILARITY_THRESHOLD=0.98

# For aggressive deduplication (more merges, potential false positives):
# ENTITY_SIMILARITY_THRESHOLD=0.7
# CROSS_TYPE_SIMILARITY_THRESHOLD=0.9

# To disable deduplication for testing or raw extractions:
# ENABLE_ENTITY_DEDUPLICATION=false
# ENABLE_RELATIONSHIP_DEDUPLICATION=false
# ENABLE_COREFERENCE_RESOLUTION=false
